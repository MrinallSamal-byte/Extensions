{
  "manifest_version": 3,
  "name": "Gramerly",
  "version": "1.0.0",
  "description": "A lightweight grammar and writing assistant for personal learning and experimentation.",
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ],
  "host_permissions": [
    "https://openrouter.ai/*",
    "https://api-inference.huggingface.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
